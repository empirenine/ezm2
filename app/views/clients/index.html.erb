<h1>Your Clients</h1>
<table>
  <tr>
    <th>Private ID</th>
    <th>First</th>
    <th>Last</th>
    <th>D.O.B</th>
    <th>Phone</th>
    <th>Notes</th>
    <th></th>
  </tr>
<%= render "shared/private-toggle" %>
<% @clients.each do |client| %>
  <tr>
    <td><%= client.identifier %></td>
    <td class="private-data"><span><%= client.first_name %></span></td>
    <td class="private-data"><span><%= client.last_name %></span></td>
    <td class="private-data"><span><%= client.date_of_birth %></span></td>
    <td class="private-data"><span><%= client.primary_phone %></span></td>
    <td class="private-data"><span><%= client.notes %></span></td>
    <td><%= link_to 'Show', client %> | <%= link_to 'Edit', edit_client_path(client) %> | <%= link_to 'Destroy', client, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Client', new_client_path %>